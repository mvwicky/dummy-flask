{
  "python.pythonPath": "/Users/michael/.pyenv/versions/holdmypics-3.8.2/bin/python",
  "python.linting.flake8Args": ["--config=${workspaceFolder}/.flake8"],
  "python.sortImports.path": "${env:VIRTUAL_ENV}/bin/isort",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "node_modules": true,
    ".mypy_cache": true,
    "holdmypics/api/images": true,
    ".cache": true,
    "*.sublime*": true,
    "*.egg-info": true,
    "pytest-report": true,
    ".pytest_cache": true,
    ".cov": true
  },
  "python.testing.pytestPath": "${env:VIRTUAL_ENV}/bin/pytest",
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.nosetestsEnabled": false,
  "python.testing.pytestEnabled": true,
  "editor.tabSize": 2,
  "[python]": {
    "editor.tabSize": 4
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/*.eot": true,
    "**/*.ttf": true,
    "**/*.woff": true,
    "**/*.woff2": true,
    "**/fonts/*.svg": true
  },
  "css.validate": false,
  "[scss]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    }
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
      "source.organizeImports": false
    },
    "editor.formatOnSave": true
  }
}
