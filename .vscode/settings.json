{
  "python.pythonPath": "${env:VIRTUAL_ENV}/bin/python",
  "python.linting.flake8Args": ["--config=${workspaceFolder}/.flake8"],
  "python.sortImports.path": "${env:VIRTUAL_ENV}/bin/isort",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "node_modules": true,
    "**/dist": true,
    "dummy_flask/api/images": true,
    ".cache": true,
    "*.sublime*": true,
    "*.egg-info": true
  },
  "python.testing.pytestPath": "${env:VIRTUAL_ENV}/bin/pytest",
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.nosetestsEnabled": false,
  "python.testing.pytestEnabled": true
}
